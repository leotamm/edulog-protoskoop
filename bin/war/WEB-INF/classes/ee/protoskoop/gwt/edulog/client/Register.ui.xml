
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<div class="container">
			<h1 class="page-header">EduLog</h1>
			<hr></hr>
			<p style="color:#858585; text-align: center; font-size: 1.2em; font-style: italic;"> New account <mark>registration page</mark> for teachers</p>

			<div class="container" style="padding:0">
				<form>
					<div class="form-group">
						<label>Add email</label>
						<g:TextBox ui:field="textEmail" styleName="form-control"></g:TextBox>
					</div>
					<div class="form-group">
						<label>Add password</label>
						<g:PasswordTextBox ui:field="textPass1"
							styleName="form-control"></g:PasswordTextBox>
					</div>
					<div class="form-group">
						<label>Confirm password</label>
						<g:PasswordTextBox ui:field="textPass2"
							styleName="form-control"></g:PasswordTextBox>
						<!-- HTML: <input type="password" class="form-control" placeholder="Repeat 
							password" name="new_user_password2"></input> -->
					</div>
				</form>
				<br></br>
				<!-- HTML: <g:Button styleName="{style.important}" ui:field="button">Submit</g:Button> 
					or perhaps <div class='{style.pretty}'> -->
				<g:Button ui:field="buttonSubmit" styleName="form-control">Register</g:Button>
			</div>
			<div id="myDiv"></div>

		</div>
	</g:HTMLPanel>
</ui:UiBinder> 