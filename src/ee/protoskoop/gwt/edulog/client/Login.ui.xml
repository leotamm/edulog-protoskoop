
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.custom {
		background-color: WhiteSmoke
	}

	</ui:style>
	<g:HTMLPanel>
		<div class="container" style="padding:0">
			<h1 class="page-header">EduLog</h1>
			<hr></hr>
			<p
				style="color:#858585; text-align: center; font-size: 1.2em; font-style: italic;">
				<mark>Login page</mark>
				for teachers
			</p>

			<div class="container" style="padding:0">
				<form>
					<div class="form-group">
						<label>Enter email</label>
						<g:TextBox ui:field="textLoginEmail"
							styleName="form-control"></g:TextBox>
					</div>
					<div class="form-group">
						<label>Enter password</label>
						<g:TextBox ui:field="textLoginPass"
							styleName="form-control"></g:TextBox>
					</div>
				</form>
				<br></br>
				<g:Button ui:field="buttonLogin" styleName="form-control">Login</g:Button>
				<br></br>
				<g:Button ui:field="buttonForgotPassword" styleName="form-control">Forgot password</g:Button>
				<br></br>
				<g:Button ui:field="buttonNewUser" styleName="form-control">New user</g:Button>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 