<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<div class="container">
			<h1 class="page-header">EduLog</h1>
			<hr></hr>
				<p style="color:#858585; text-align: center; font-size: 1.2em; font-style: italic;"> Comment: Class/course adding page for teachers</p>
				
				<div class="container" style="padding:0">
					<form>	
					
						<div class="form-group">
							<label>Select class</label>
							<g:ListBox ui:field="listboxClass" styleName="form-control">
							  <g:item value="1A">Class 1A</g:item>
							  <g:item value="1B">Class 1B</g:item>
							  <g:item value="1C">Class 1C</g:item>
							  <g:item value="2A">Class 2A</g:item>
							  <g:item value="2B">Class 2B</g:item>
							  <g:item value="2C">Class 2C</g:item>
							</g:ListBox>
						</div>
						
						<div class="form-group">
							<label>Select activity</label>
							<g:ListBox ui:field="listboxActivity" styleName="form-control">
							  <g:item value="classroomSession">Classroom study session</g:item>
							  <g:item value="outdoorSession">Outdoor study session</g:item>
							  <g:item value="onlineSession">Online study session</g:item>
							</g:ListBox>
						</div>
						<br></br>
					
						<g:Button ui:field="buttonAddSession">Add session</g:Button>
						<br></br><br></br><br></br>

						<div class="form-group">
							<label>Selected session</label>
							<g:TextBox ui:field="selectedSession" styleName="form-control"></g:TextBox>
						</div>

 						<div class="form-group">
 							<label>All sessions</label>
 							<g:FlexTable ui:field="sessionTable" styleName="form-control"></g:FlexTable>
 						</div>
 							
					</form>
				</div>
						
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 