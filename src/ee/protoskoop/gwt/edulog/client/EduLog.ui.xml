
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<div class="container" style="padding:0">
			<h1 class="page-header">Edulog</h1>
			<hr></hr>
			<p
				style="color:#858585; text-align: center; font-size: 1.2em; font-style: italic;">
				Let's give feedback about your studies!
			</p>
			<form>
				<div class="form-group">
					<label>Enter start code</label>
					<g:TextBox ui:field="startCodeTextBox"
						styleName="form-control"></g:TextBox>
				</div>
				<br></br>
				<g:Button ui:field="buttonStartFeedbackSession"
					styleName="form-control">Start</g:Button>
				<br></br>
				<hr></hr>
				<p
					style="color:#858585; text-align: center; font-size: 1.2em; font-style: italic;">
					Rate this activity
				</p>
				<g:TextBox ui:field="rateActivityTextBox"
					styleName="form-control"></g:TextBox>
				<br></br>
				<form>
					<div class="form-group">
						<label>By the end of this activity ...</label>
						<g:ListBox ui:field="ratingListBox"
							styleName="form-control">
							<g:item value="5">... I understood everything</g:item>
							<g:item value="4">... I mostly understood</g:item>
							<g:item value="3">... I understood just a little</g:item>
							<g:item value="2">... I did't understand anything</g:item>							
						</g:ListBox>
					</div>
				</form>
				<br></br>
				<g:Button ui:field="buttonSubmit" styleName="form-control">Rate
				</g:Button>

			</form>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 