
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<div class="container">
			<h1 class="page-header">EduLog</h1>
			<hr></hr>
				<p style="color:#858585; text-align: center; font-size: 1.2em; font-style: italic;"> Comment: Login page for teachers</p>
								
				<div class="container" style="padding:0">
					<form>
						<div class="form-group">
							<label>Enter email</label>
							<g:TextBox ui:field="textLoginEmail" styleName="form-control"></g:TextBox>
						</div>
						<div class="form-group">
							<label>Enter password</label>
							<g:TextBox ui:field="textLoginPass" styleName="form-control"></g:TextBox>
						</div>
					</form>
					<br></br>
						<g:Button ui:field="buttonLogin">Login</g:Button>
				</div>			
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 